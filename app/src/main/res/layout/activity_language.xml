<?xml version="1.0" encoding="utf-8"?>

<!-- fragment_language.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="UseSwitchCompatOrMaterialXml"
    android:id="@+id/language_setting">

    <ImageView
        android:id="@+id/language_go_back"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/languageTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:text="언어 설정"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/language_go_back" />


    <!-- Line -->
    <View
        android:id="@+id/divider107"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#BDBDBD"
        app:layout_constraintTop_toBottomOf="@id/languageTextView" />

    <!-- python -->
    <TextView
        android:id="@+id/python_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="python"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider107"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- python 체크 표시 -->
    <ImageView
        android:id="@+id/python_check"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        android:src="@drawable/ic_check"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/python_label"
        app:layout_constraintBottom_toBottomOf="@id/python_label" />


    <View
        android:id="@+id/divider108"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BDBDBD"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/python_label" />


    <!-- java -->
    <TextView
        android:id="@+id/java_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Java"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider108"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- java 체크 표시 -->
    <ImageView
        android:id="@+id/java_check"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        android:src="@drawable/ic_check"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/java_label"
        app:layout_constraintBottom_toBottomOf="@id/java_label" />

    <View
        android:id="@+id/divider109"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BDBDBD"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/java_label" />

    <!-- cpp -->
    <TextView
        android:id="@+id/cpp_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C++"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider109"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- cpp 체크 표시 -->
    <ImageView
        android:id="@+id/cpp_check"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        android:src="@drawable/ic_check"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/cpp_label"
        app:layout_constraintBottom_toBottomOf="@id/cpp_label" />

    <View
        android:id="@+id/divider110"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BDBDBD"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/cpp_label" />


</androidx.constraintlayout.widget.ConstraintLayout>




