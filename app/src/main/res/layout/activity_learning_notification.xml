<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:paddingTop="30dp"
    android:paddingStart="18dp"
    android:paddingEnd="18dp"
    android:paddingBottom="5dp"
    android:background="#F5F5F5">

    <ImageView
        android:id="@+id/study_notification_go_back"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/studyNotificationTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:text="학습 알림"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/study_notification_go_back" />

    <!-- Line -->
    <View
        android:id="@+id/divider115"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BDBDBD"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/studyNotificationTextView"
        app:layout_constraintBottom_toTopOf="@id/remind_notifications_label" />



    <!-- 학습 리마인드 알림 -->
    <TextView
        android:id="@+id/remind_notifications_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="학습 리마인드 알림"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider115"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/switch_remind_notifications" />


    <Switch
        android:id="@+id/switch_remind_notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="230sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/divider115"
        app:layout_constraintBottom_toBottomOf="@id/divider116" />


    <View
        android:id="@+id/divider116"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BDBDBD"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/remind_notifications_label"
        app:layout_constraintBottom_toTopOf="@id/learning_notification_label" />



    <!-- 학습 리마인드 알림 시간 -->
    <TextView
        android:id="@+id/learning_notification_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="학습 리마인드 알림 시간"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider116"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/remind_arrow" />


    <ImageView
        android:id="@+id/remind_arrow"
        android:layout_width="24sp"
        android:layout_height="24sp"
        android:layout_marginBottom="10sp"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/divider116"
        app:layout_constraintBottom_toBottomOf="@id/divider117"/>

    <View
        android:id="@+id/divider117"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BDBDBD"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/learning_notification_label" />


</androidx.constraintlayout.widget.ConstraintLayout>




