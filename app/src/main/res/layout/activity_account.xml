<?xml version="1.0" encoding="utf-8"?>

<!-- fragment_account.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="30dp"
    android:paddingStart="18dp"
    android:paddingEnd="18dp"
    android:paddingBottom="5dp"
    android:background="#F5F5F5"
    tools:ignore="UseSwitchCompatOrMaterialXml"
    android:id="@+id/account_management">


    <ImageView
        android:id="@+id/account_go_back"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/AccountTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:text="계정 관리"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/account_go_back" />

    <!-- Line -->
    <View
        android:id="@+id/divider118"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BDBDBD"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/AccountTextView" />

    <TextView
        android:id="@+id/account_connected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="계정 연결"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/divider118"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/account_connected_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="연결된 계정"
        android:textSize="14sp"
        android:textColor="#757575"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/account_connected"/>

    <!-- GitHub 연결 상태 -->
    <LinearLayout
        android:id="@+id/github_connection_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/main1"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@id/account_connected">

        <TextView
            android:id="@+id/github_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="GitHub"
            android:textSize="16sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/github_disconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="연결 해제 > "
            android:textSize="16sp"
            android:textColor="#000000" />
    </LinearLayout>



    <View
        android:id="@+id/divider119"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BDBDBD"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/github_connection_status" />


    <TextView
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider119"
        app:layout_constraintStart_toStartOf="parent" />


    <View
        android:id="@+id/divider120"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BDBDBD"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/logout" />

    <TextView
        android:id="@+id/withdraw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="탈퇴하기"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider120"
        app:layout_constraintStart_toStartOf="parent" />


    <View
        android:id="@+id/divider121"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BDBDBD"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/withdraw" />


</androidx.constraintlayout.widget.ConstraintLayout>




