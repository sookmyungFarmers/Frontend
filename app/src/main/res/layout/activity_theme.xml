<?xml version="1.0" encoding="utf-8"?>

<!-- fragment_theme.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="UseSwitchCompatOrMaterialXml"
    android:id="@+id/theme_setting">

    <ImageView
        android:id="@+id/theme_go_back"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/themeTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:text="테마 설정"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/theme_go_back" />

    <!-- Line -->
    <View
        android:id="@+id/divider104"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BDBDBD"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/themeTextView"
        app:layout_constraintBottom_toTopOf="@id/dark_mode_label" />

    <!-- 다크모드 설정 -->
    <TextView
        android:id="@+id/dark_mode_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다크모드 설정"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider104"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/switch_dark_mode" />

    <Switch
        android:id="@+id/switch_dark_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="230sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/divider104"
        app:layout_constraintBottom_toBottomOf="@id/divider105" />

    <View
        android:id="@+id/divider105"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BDBDBD"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/dark_mode_label"
        app:layout_constraintBottom_toTopOf="@id/learning_theme_label" />


    <!-- 학습 테마 설정 -->
    <TextView
        android:id="@+id/learning_theme_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="학습 테마 설정"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider105"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/learning_alarm_arrow2" />


    <ImageView
        android:id="@+id/learning_alarm_arrow2"
        android:layout_width="20sp"
        android:layout_height="20sp"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="22dp"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/divider105"/>

    <View
        android:id="@+id/divider106"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BDBDBD"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/learning_theme_label" />


</androidx.constraintlayout.widget.ConstraintLayout>




